<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">
    <div class="flex h-screen">
        <div class="w-1/4 bg-gray-800 p-4">
            <!-- Sidebar content if needed -->
        </div>
        <div class="w-3/4 flex flex-col">
            <div class="bg-gray-800 p-4 flex justify-between items-center">
                <div class="flex items-center">
                    <!-- Chat header content if needed -->
                </div>
            </div>
            <div class="flex-1 p-4 overflow-y-auto">
                <ul class="space-y-4">
                    <% chat.forEach(function(elem) { %>
                        <% if (elem.senderuser !== user._id) { %>
                            <li class="flex justify-end">
                                <div class="flex items-center space-x-2">
                                    <div class="text-sm text-gray-500"><%= elem.date %></div>
                                    <div class="bg-blue-500 text-white rounded-lg p-4 max-w-xs break-words"><%= elem.text %></div>
                                    <div class="text-xs text-gray-400"><%= elem.senderuser.username %></div>
                                </div>
                            </li>
                        <% } else { %>
                            <li class="flex justify-start">
                                <div class="flex items-center space-x-2">
                                    <div class="text-sm text-gray-500"><%= elem.date %></div>
                                    <div class="bg-gray-700 text-white rounded-lg p-4 max-w-xs break-words"><%= elem.text %></div>
                                    <div class="text-xs text-gray-400"><%= elem.senderuser.username %></div>
                                </div>
                            </li>
                        <% } %>
                    <% }) %>
                </ul>
            </div>
            <form id="uploadform" action="/chatupload/<%= userchat._id %>" method="post" class="p-4 bg-gray-800">
                <div class="flex">
                    <input name="text" type="text" class="flex-1 bg-gray-700 text-white p-2 rounded-l-lg focus:outline-none" placeholder="Enter text here...">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-r-lg"><i class="fa fa-send"></i></button>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.querySelector("#uploadform input").click();
    </script>
</body>
</html>
