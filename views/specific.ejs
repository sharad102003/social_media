<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
      <div class="nav flex justify-between items-center px-4">
        <h3 class="text-lg"><%=post.user.username%></h3>
        <div class="icons flex gap-5">
          <i class="text-[1.4rem] ri-menu-line"></i>
        </div>
      </div>
      <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
        <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover" src="/images/uploads/<%=post.user.profileImage%>" alt="">
        </div>
        <div class="stats flex gap-5 items-center justify-between">
          <div class="flex flex-col items-center justify-center">
            <h3><%=post.user.posts.length%></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%=post.user.followers.length%></h3>
            <h4>followers</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%=post.user.following.length%></h3>
            <h4>following</h4>
          </div>
        </div>
      </div>
      <div class="dets px-6 mt-5">
        <h3 class="text-lg mb-1"><%=post.user.name%></h3>
        <p class="text-xs tracking-tight opacity-50"><%=post.user.bio%></p>
      </div>
      <div class="px-6 mt-5">
       
            <a  href="/follow/<%=post._id%>">
                
                <% if(post.user.followers.indexOf(user._id)!==-1){ %>
                    <i class="px-3 py-2 bg-zinc-800 text-xs rounded-md-fill text-blue-300 ">Following</i>
                   <% } else { %>
                    <i class="px-3 py-2 bg-zinc-800 text-xs rounded-md-line ">Follow</i>
                   <% } %>
            
            </a>
          
      </div>
     
      <div class="posts w-full flex  gap-1 py-2 mt-5 flex-wrap">

        <% post.user.posts.forEach(function(elem){%>


          <div class="post w-[32.5%] h-32 bg-sky-100 overflow-hidden">
            <img class=" h-full w-full object-cover"src="/images/uploads/<%=elem.picture%>" alt="">
          </div>
       

        <%}) %>
       
       

      </div>
  </div>
<% include ./partials/footer.ejs %>