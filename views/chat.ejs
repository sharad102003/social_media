<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 text-white">

    <div class="container mx-auto py-8">
        <div class="flex">
            <div class="w-full md:w-1/3 lg:w-1/4 bg-gray-800 p-4 rounded-lg shadow-lg">
                <% user.following.forEach(function(elem) { %>
                <a href="/chat/<%= elem._id %>">
                    <div id="plist" class="people-list mb-4">
                        <ul class="list-none">
                            <li class="flex items-center space-x-4 p-2 rounded-lg hover:bg-gray-700">
                                <div class="w-12 h-12 rounded-full overflow-hidden">
                                    <img class="w-full h-full object-cover" src="<%= elem.profileImage %>" alt="">
                                </div>
                                <div class="flex-1">
                                    <div class="text-sm font-semibold"><%= elem.username %></div>
                                    <div class="text-xs text-gray-400">
                                        
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </a>
                <% }) %>
            </div>
            <div class="w-full md:w-2/3 lg:w-3/4">
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    <div class="chat-header mb-4">
                        <!-- Add your chat header content here -->
                    </div>
                    <div class="chat-history h-96 overflow-y-auto">
                        <!-- Add your chat history content here -->
                    </div>
                    <div class="chat-message mt-4">
                        <!-- Add your chat message input here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
